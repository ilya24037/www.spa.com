{
  "compilerOptions": {
    // Основные настройки
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    
    // Модули и разрешение
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"],
      "@/src/*": ["resources/js/src/*"],
      "@/shared/*": ["resources/js/src/shared/*"],
      "@/entities/*": ["resources/js/src/entities/*"],
      "@/features/*": ["resources/js/src/features/*"],
      "@/widgets/*": ["resources/js/src/widgets/*"],
      "@/pages/*": ["resources/js/src/pages/*"]
    },
    
    // Strict режим для максимальной безопасности
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    
    // Дополнительные проверки
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    
    // Совместимость
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    
    // Для Vue
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    
    // Выходные файлы
    "noEmit": true,
    "isolatedModules": true,
    
    // Source maps для отладки
    "sourceMap": true,
    "inlineSources": true,
    
    // Декораторы (если нужны)
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.vue",
    "resources/js/**/*.d.ts"
  ],
  
  "exclude": [
    "node_modules",
    "vendor",
    "public",
    "storage",
    "bootstrap/cache"
  ],
  
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}