{
  "project": "SPA Platform",
  "version": "1.0.0",
  "description": "Настройки контроля качества кода для Claude Code",
  
  "pre-commit": {
    "lint": true,
    "format": true,
    "test": true,
    "security-scan": true,
    "typescript-check": true,
    "php-stan": true
  },
  
  "code-generation": {
    "require-tests": true,
    "min-coverage": 80,
    "max-complexity": 10,
    "require-docs": true,
    "require-types": true,
    "max-file-lines": 500,
    "max-function-lines": 50
  },
  
  "review-criteria": {
    "no-console-logs": true,
    "no-commented-code": true,
    "no-magic-numbers": true,
    "proper-error-handling": true,
    "no-any-types": true,
    "no-inline-styles": true,
    "no-direct-dom-manipulation": true,
    "no-business-logic-in-controllers": true
  },
  
  "frontend": {
    "framework": "Vue 3",
    "architecture": "FSD",
    "required": {
      "typescript": true,
      "composition-api": true,
      "script-setup": true,
      "props-validation": true,
      "error-boundaries": true,
      "loading-states": true,
      "skeleton-loaders": true,
      "mobile-responsive": true
    },
    "forbidden": {
      "options-api": true,
      "any-types": true,
      "inline-styles": true,
      "console-logs": true,
      "direct-mutations": true
    }
  },
  
  "backend": {
    "framework": "Laravel",
    "architecture": "DDD",
    "required": {
      "service-layer": true,
      "repositories": true,
      "dto-pattern": true,
      "form-requests": true,
      "api-resources": true,
      "database-transactions": true,
      "error-handling": true
    },
    "forbidden": {
      "business-logic-in-controllers": true,
      "direct-db-queries": true,
      "raw-sql": true,
      "hardcoded-credentials": true,
      "unvalidated-input": true
    }
  },
  
  "security": {
    "input-validation": true,
    "xss-protection": true,
    "sql-injection-prevention": true,
    "csrf-protection": true,
    "rate-limiting": true,
    "secure-headers": true,
    "no-exposed-secrets": true
  },
  
  "performance": {
    "max-bundle-size-kb": 500,
    "max-queries-per-request": 20,
    "max-response-time-ms": 200,
    "lazy-loading": true,
    "code-splitting": true,
    "image-optimization": true,
    "cache-strategy": true
  },
  
  "git": {
    "commit-format": "conventional",
    "branch-naming": {
      "feature": "feature/",
      "fix": "fix/",
      "hotfix": "hotfix/",
      "refactor": "refactor/"
    },
    "require-pr-review": false,
    "squash-commits": false
  },
  
  "testing": {
    "unit-tests": {
      "required": true,
      "min-coverage": 70,
      "framework": "PHPUnit/Vitest"
    },
    "feature-tests": {
      "required": true,
      "api-endpoints": true,
      "user-flows": true
    },
    "e2e-tests": {
      "required": false,
      "framework": "Playwright"
    }
  },
  
  "documentation": {
    "code-comments": {
      "language": "russian",
      "complex-logic": true,
      "public-methods": true,
      "interfaces": true
    },
    "readme": {
      "required": false,
      "for-complex-features": true
    },
    "api-docs": {
      "required": true,
      "format": "OpenAPI"
    }
  },
  
  "checks": {
    "pre-implementation": [
      "Check for existing similar code",
      "Verify architecture compliance",
      "Review security implications"
    ],
    "post-implementation": [
      "Run linters",
      "Run tests",
      "Check TypeScript errors",
      "Verify no console.logs",
      "Check bundle size",
      "Test mobile version"
    ],
    "before-commit": [
      "All tests pass",
      "No TypeScript errors",
      "No console.logs",
      "Documentation updated",
      "Migrations tested (up/down)",
      "Performance not degraded"
    ]
  }
}