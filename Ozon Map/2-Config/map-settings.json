{
  "version": 8,
  "name": "OZON Map Style",
  "metadata": {
    "maplibre:renderer": "mlgljs",
    "ozon:version": "1.0.0",
    "description": "OZON pickup points map style based on OpenMapTiles"
  },
  "light": {
    "intensity": 0.25
  },
  "center": [37.6173, 55.7558],
  "zoom": 10,
  "bearing": 0,
  "pitch": 0,
  "projection": "mercator",
  "bounds": [
    [30.0, 50.0],
    [45.0, 60.0]
  ],
  "maxZoom": 18,
  "minZoom": 3,
  "maxBounds": [
    [20.0, 45.0],
    [50.0, 65.0]
  ],
  "controls": {
    "navigation": {
      "enabled": true,
      "position": "top-right",
      "showCompass": true,
      "showZoom": true,
      "visualizePitch": false
    },
    "geolocate": {
      "enabled": true,
      "position": "top-right",
      "positionOptions": {
        "enableHighAccuracy": true,
        "timeout": 6000,
        "maximumAge": 0
      },
      "trackUserLocation": true,
      "showAccuracyCircle": true,
      "showUserLocation": true
    },
    "fullscreen": {
      "enabled": true,
      "position": "top-right"
    },
    "scale": {
      "enabled": true,
      "position": "bottom-left",
      "maxWidth": 100,
      "unit": "metric"
    },
    "attribution": {
      "enabled": true,
      "position": "bottom-right",
      "compact": true
    }
  },
  "interaction": {
    "scrollZoom": true,
    "boxZoom": true,
    "dragRotate": true,
    "dragPan": true,
    "keyboard": true,
    "doubleClickZoom": true,
    "touchZoomRotate": true,
    "touchPitch": true,
    "cooperativeGestures": false
  },
  "performance": {
    "antialias": true,
    "preserveDrawingBuffer": false,
    "failIfMajorPerformanceCaveat": false,
    "fadeDuration": 300,
    "crossSourceCollisions": true
  },
  "localization": {
    "language": "ru",
    "rtl": false,
    "labels": {
      "zoomIn": "Увеличить",
      "zoomOut": "Уменьшить",
      "compass": "Сбросить направление севера",
      "geolocate": "Найти мое местоположение",
      "fullscreen": "Полноэкранный режим",
      "exitFullscreen": "Выйти из полноэкранного режима"
    }
  },
  "theme": {
    "mode": "light",
    "colors": {
      "primary": "#005bff",
      "secondary": "#707f8d",
      "accent": "#10c44c",
      "warning": "#f91155",
      "background": "#ffffff",
      "surface": "#f8f9fa"
    }
  }
}